@model WebApps.Models.Worker

@{
    ViewBag.Title = "Masukkan Data Baru";
}

<h2>Masukkan data Pegawai Baru</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group row">
            @Html.LabelFor(model => model.WorkerName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.WorkerName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.WorkerName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(model => model.WorkerActive, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox" onclick="myFunction()">
                    @Html.EditorFor(model => model.WorkerActive )
                    @Html.ValidationMessageFor(model => model.WorkerActive, "", new { @class = "text-danger" })
                    <p id="text" style="display:none">Checkbox is CHECKED!</p>
                </div>
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(model => model.WorkerFree, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.WorkerFree)
                    @Html.ValidationMessageFor(model => model.WorkerFree, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Simpan" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Kembali Ke Daftar Seluruh Pegawai", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
